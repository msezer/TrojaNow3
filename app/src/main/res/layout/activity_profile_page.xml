<!-- Profile Page Form -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.usc.sunset.trojanow3.ProfilePage"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:baselineAligned="false">

    <!--  Username Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="Your Username (Email)"
        android:id="@+id/textView_profile_email"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--  Username -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/profile_email"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!--  Fullname Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="Your Fullname"
        android:id="@+id/textView_profile_fullname"
        android:layout_below="@+id/profile_email"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--  Fullname -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/profile_fullname"
        android:layout_below="@+id/textView_profile_fullname"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--  Password Label-1 -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="Your Password"
        android:id="@+id/textView_profile_password1"
        android:layout_below="@+id/profile_fullname"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!--  Password-1 -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:id="@+id/profile_password_first"
        android:singleLine="true"
        android:layout_below="@+id/textView_profile_password1"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--  Password Label-2 -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="Enter Your Password Again Please"
        android:id="@+id/textView_profile_password2"
        android:layout_below="@+id/profile_password_first"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:id="@+id/profile_password_second"
        android:singleLine="true"
        android:layout_below="@+id/textView_profile_password2"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Cancel button -->
    <Button
        android:id="@+id/button_profile_back"
        android:onClick="onClickToMain"
        android:text="Cancel"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_profile_update"
        android:onClick="onClickUpdateProfile"
        android:text="Update"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_profile_back" />


</RelativeLayout><!-- Profile Page Form Ends --><!-- Update My Profile button -->






