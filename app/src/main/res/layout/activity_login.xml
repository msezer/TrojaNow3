<!-- Login Form -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.usc.sunset.trojanow3.Login"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:baselineAligned="false"
    android:id="@+id/login_layout">

    <!--  Email Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="Email"
        android:layout_marginTop="60dip" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:id="@+id/login_email" />

    <!--  Password Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="Password" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:password="true"
        android:inputType="textPassword"
        android:id="@+id/login_password" />

    <!-- Login button -->
    <Button
        android:id="@+id/btnLogin"
        android:onClick="onClickLoginProcess"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Login" />

    <!-- Link to Registration Screen -->
    <TextView
        android:id="@+id/link_to_register"
        android:onClick="onClickRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:text="New to Trojanow? Register here!"
        android:gravity="center"
        android:textSize="18dip"
        android:textColor="#0b84aa" />

    <!-- Link to Reset Password Screen -->
    <TextView
        android:id="@+id/link_to_resetPassword"
        android:onClick="onClickResetPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:text="Forgot Password"
        android:gravity="center"
        android:textSize="16dip"
        android:textColor="#0b84aa" />
</LinearLayout><!-- Login Form Ends -->