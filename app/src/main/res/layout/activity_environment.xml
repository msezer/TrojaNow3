<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.usc.sunset.trojanow3.Environment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_environment_r"
        android:id="@+id/text_environment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/checkBoxLoc"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:checked="true"
        android:layout_below="@+id/text_environment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/env_Location"
        android:layout_below="@+id/checkBoxLoc"
        android:layout_alignLeft="@+id/checkBoxLoc"
        android:layout_alignStart="@+id/checkBoxLoc" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:id="@+id/checkBoxWeather"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/checkBoxLoc"
        android:layout_alignStart="@+id/checkBoxLoc"
        android:checked="false" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/env_Weather"
        android:layout_below="@+id/checkBoxWeather"
        android:layout_alignLeft="@+id/checkBoxWeather"
        android:layout_alignStart="@+id/checkBoxWeather" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_env_share_r"
        android:id="@+id/button_env_share"
        android:onClick="onClickShare"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/text_environment"
        android:layout_alignStart="@+id/text_environment"
        android:layout_marginBottom="69dp" />

</RelativeLayout>
