<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.usc.sunset.trojanow3.Compose">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Write Your Message Here"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet_msg"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:width="400dp" />


    <ImageButton
        android:id="@+id/button_addlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_mapmode"
        android:contentDescription="@string/button_addlocation_r"
        android:layout_below="@+id/tweet_msg"
        android:layout_alignRight="@+id/tweet_msg"
        android:layout_alignEnd="@+id/tweet_msg"
        android:layout_marginTop="36dp"
        android:onClick="onClickEnvironment"/>

    <ImageButton
        android:id="@+id/button_addpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/button_addpicture_r"
        android:onClick="onClickAddPicture"
        android:layout_alignTop="@+id/button_addlocation"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_sendmessage_r"
        android:id="@+id/button_sendmessage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:onClick="onClickSendMessage"/>
</RelativeLayout>
